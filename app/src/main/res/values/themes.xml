<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TravelAppTheme" parent="AppThemeBase">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Base.TravelAppTheme.Launcher" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <item name="android:navigationBarColor">?windowSplashScreenBackground</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">@bool/is_status_bar_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">@bool/is_navigation_bar_light</item>
    </style>

    <style name="TravelAppTheme.Launcher" parent="Base.TravelAppTheme.Launcher">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenBackground">@color/ds_white</item>
    </style>

</resources>
